<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
   PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
   "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
 <generatorConfiguration>
     <!--　不同数据库需要修改不同驱动jar包 -->
     <classPathEntry    location="ojdbc6-11.2.0.3.jar"/>
     <context id="DB2Tables"    targetRuntime="MyBatis3">
		 <property name="javaFileEncoding" value="UTF-8"/>
         <commentGenerator>
             <property name="suppressDate" value="true"/>
             <property name="suppressAllComments" value="false"/>
			 <property name="addRemarkComments" value="true"/><!-- 增加comments -->
         </commentGenerator>
         <!--
            mysql数据连接
			 <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://192.168.1.212:3306/xetl?useUnicode=true" userId="root" password="123456">
		 -->
		 <jdbcConnection driverClass="oracle.jdbc.driver.OracleDriver" connectionURL="jdbc:oracle:thin:@192.168.1.211:1521/orcl" userId="rlis_mt" password="rlis_mt">
         </jdbcConnection>
         <javaTypeResolver>
             <property name="forceBigDecimals" value="false"/>
         </javaTypeResolver>
         
         <javaModelGenerator targetPackage="com.scfsoft.hio.sys.entity.jpa" targetProject="src">
             <property name="enableSubPackages" value="true"/>
             <property name="trimStrings" value="true"/>
         </javaModelGenerator>
         
         <sqlMapGenerator targetPackage="mapping" targetProject="src" >
             <property name="enableSubPackages" value="true"/>
         </sqlMapGenerator>
        
         <javaClientGenerator type="XMLMAPPER" targetPackage="com.scfsoft.hio.sys.dao.mybatis" targetProject="src">
             <property name="enableSubPackages" value="true"/>
         </javaClientGenerator>
         
		 <!-- 定制后的table 
         		原理：oracle不支持catalog
         		catalog做为过滤表的条件。查询用户catalog下的表。
         		如果用schema过滤，则会出现，生成的xml文件中，表有schema前缀
				
				catalog="etl"
          -->
         <table tableName="SYS_CODE" domainObjectName="SysCode" 
			enableCountByExample="false" enableUpdateByExample="false"
			enableDeleteByExample="false" enableSelectByExample="false" 
			selectByExampleQueryId="false" >
		 </table>
		 
     </context>
 </generatorConfiguration>